@using BlazorWebStock.Services
@using BlazorWebStockLibrary.Model

@inject IBasketService basketService

<p class="mt-3"><span class="oi oi-tablet"></span> Blazor Web Stock</p>
<a href="/basket" class="btn btn-outline-secondary">
    <span class="oi oi-cart"></span> @ItemNumber Items
</a>

@code {
    private IEnumerable<BasketItem> items { get; set; }

    private int ItemNumber = 0;

    protected override async Task OnInitializedAsync()
    {
        basketService.OnBasketChanged += BasketChanged;
    }

    private void BasketChanged(int netQty)
    {
        ItemNumber = netQty;
        StateHasChanged();
    }
}
